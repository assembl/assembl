version: "3"

networks:
  my_net:

volumes:
  assembl_static:
  pgdata:
  redisdata:

services:
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:5.2.2
    networks:
      - my_net
    environment:
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    deploy:
      resources:
        limits:
          memory: 1g

  redis:
    image: redis:3.0-alpine
    volumes:
      - redisdata:/data
    networks:
      - my_net

  memcached:
    image: memcached:1.4-alpine
    networks:
      - my_net

  database:
    image: postgres:9.5.5-alpine
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - my_net

  web:
    image: nginx:1.12-alpine
    ports:
      - "8080:80"
    volumes:
      - .:/opt/default_config
      - assembl_static:/opt/assembl_static
    environment:
      http_upgrade: '$http_upgrade'
    depends_on:
{%- for hostname in docker_assembl_hosts %}
      - assembl{{ loop.index }}{% endfor %}
    command: /bin/sh -c "cp /opt/default_config/nginx_*.conf > /etc/nginx/conf.d && nginx -g 'daemon off;'"
    networks:
      - my_net

{% if docker_sentry == 'docker' %}
  # TODO: Configure sentry
  sentry:
    image: sentry:latest
    depends_on:
      - database
      - redis
{% endif %}

{% if docker_imap == 'docker' or docker_smtp == 'docker' %}
  # TODO: Add mail
  # mail:
  #   image: mailu:stable

{% endif %}

{% if docker_piwik == 'docker' %}
  # TODO: Configure piwik
  # piwik:
  #   image: piwik:latest
{% endif %}

{% for hostname in docker_assembl_hosts %}
  assembl{{ loop.index }}:
    image: assembl:latest
    volumes:
      - .:/var/docker_data
      - assembl_static:/opt/assembl_static
    environment:
      DOCKER_RC: /var/docker_data/assembl{{ loop.index }}.rc
      BUILDING_DOCKER: "false"
    depends_on:
      - database
      - memcached
      - redis
      - elasticsearch
    command: sh -c 'cd /opt/assembl; /etc/init.d/ssh start ; chown assembl_user /opt/assembl_static; . venv/bin/activate ; env BUILDING_DOCKER=false fab -c /var/docker_data/assembl{{ loop.index }}.rc docker_startup ; tail -f /dev/null'
    networks:
      - my_net
{% endfor %}
