  "//": "See https://facebook.github.io/jest/docs/webpack.html for more info",
  "jest": {
    "coverageReporters": ["json-summary", "lcov", "text", "text-summary"],
    "coverageThreshold": {
      "global": {
        "lines": 52,
        "statements": 51,
        "functions": 39,
        "branches": 38
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "jquery": "<rootDir>/node_modules/jquery/dist/jquery.slim.min.js",
      "annotator_range":
        "<rootDir>/node_modules/hypothesis/src/annotator/anchoring/range.coffee"
    },
    "moduleFileExtensions": ["coffee", "gql", "graphql", "js", "json", "jsx"],
    "transformIgnorePatterns": [
      "/node_modules/(?!(assembl-editor-utils|assembl-test-editor-utils|draft-js-attachment-plugin|draft-js-link-plugin|draft-js-modal-plugin|hypothesis)/)"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "\\.coffee$": "jest-coffee-preprocessor",
      "\\.(js|jsx)$": "babel-jest"
    },
    "setupFiles": ["<rootDir>/tests/setupTests.js"],
    "globals": {
      "globalAnalytics": {}
    }
  },
  "private": true,
  "workspaces": ["workspaces/*"],
  "browserslist": ["last 2 versions", "ie > 10", "not dead"]
