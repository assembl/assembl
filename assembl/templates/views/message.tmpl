<% if( collapsed ){ %>

<div class="message-header">
    <div class="float-left">
        <% for( var i=1; i<level; i+= 1) { %>
            <span class="message-bar"></span>
        <% } %>
        <a class="iconbutton icon-right-dir"></a>
        <img src="<%= app.formatAvatarUrl(avatarUrl, 32) %>" alt="{{ gettext('User') }}"  class="image-rounded" width="32" height="32" />
    </div>

    <div class="message-date"><%= date %></div>
    <div class="message-title">
        <span class="text-bold inline margin-right"><%= authorName %></span>
        <span class="inline margin-right"><%= subject %></span>
        <span class="text-muted text-opaque inline"><%= app.stripHtml(body) %></span>
    </div>
</div>

<% } else { %>

<div>
    <div class="media">
        
        <% for( var i=1; i<level; i+= 1) { %>
            <span class="message-bar message-bar--100vertical" data-bar-level="<%= i %>"></span>
        <% } %>

        <div class="media-imgleft">
            <a class="iconbutton icon-down-dir"> </a>
            <img src="<%= app.formatAvatarUrl(avatarUrl) %>" alt="{{ gettext('User') }}"  class="image-rounded" />
        </div>

        <div class="media-body">
            <div class="media-title">
                {% set userName = "<%= authorName %>" %}
                {% set time = "<%= date %>" %}
                {{ gettext('<strong>%(user)s</strong> | <time>%(time)s</time>')|format(user=userName, time=time)|safe }}
            </div>
            <div><strong><%= subject %></strong></div>
        </div>
    </div>

    <div class="spacer"></div>
    <div class="spacer"></div>

    <div class="message-body">
        <%= app.formatMessageToDisplay(body) %>
    </div>
</div>

<% } %>
