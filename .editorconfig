; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

; 4 space indentation
; [*.py]
; indent_style = space
; indent_size = 4

; Rest
trim_trailing_whitespace = false

; Javascript
[*.js]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.jsx]
indent_style = space
indent_size = 2
insert_final_newline = false

; Css
[*.scss]
indent_style = space
indent_size = 2

; tmpl
[*.tmpl]
indent_style = space
indent_size = 4


; Jinja
[*.jinja2]
indent_style = space
indent_size = 4
